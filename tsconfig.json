{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": false,
  },
  "include": [
    "./typings/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/__snapshots__/**",
    "**/dist/**",
    "**/.turbo/**"
  ]
}
